# ============================================================================
# Insurance Claim Agent - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values

# ============================================================================
# AI SERVICE API KEYS
# ============================================================================
# At least one AI service is required for document processing

# Groq API (Recommended - Fast and free tier available)
GROQ_API_KEY=your_groq_api_key_here

# OpenAI API (Alternative)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API (Alternative)
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================================================
# VECTOR DATABASE
# ============================================================================
# Pinecone for policy document indexing

PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=insurance-policies

# ============================================================================
# DATABASE (PostgreSQL)
# ============================================================================
# PostgreSQL connection string for user authentication

DATABASE_URL=postgresql://postgres:postgres@localhost:5432/insurance_claims

# ============================================================================
# AUTHENTICATION & SECURITY
# ============================================================================
# JWT Configuration

# Generate a secure secret key with: openssl rand -hex 32
SECRET_KEY=your_secret_key_here_change_in_production

# JWT Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# GOOGLE OAUTH2
# ============================================================================
# Get credentials from: https://console.cloud.google.com/apis/credentials

GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG_MODE=True

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Application Info
APP_NAME=Insurance Claim Processor
APP_VERSION=1.0.0

# ============================================================================
# DOCUMENT PROCESSING
# ============================================================================

MAX_FILE_SIZE_MB=10
OCR_LANGUAGE=deu+eng
SUPPORTED_FILE_TYPES=[".pdf",".png",".jpg",".jpeg",".tiff"]

# ============================================================================
# VECTOR DATABASE SETTINGS
# ============================================================================

EMBEDDING_STRATEGY=local
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ============================================================================
# CLAIM PROCESSING
# ============================================================================

DEFAULT_CURRENCY=EUR
DEFAULT_DEDUCTIBLE=50.0
DEFAULT_COVERAGE_RATE=0.80

