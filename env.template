# Insurance Claim Processing - Environment Variables
# Copy this file to .env and fill in your API keys

# Required: Groq API Key for document extraction and analysis
# Get your key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Recommended: Gemini API Key for best quality (Google AI)
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: OpenAI API Key for GPT-4 (alternative to Gemini)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Pinecone for cloud vector database (uses ChromaDB locally by default)
# Get your key from: https://app.pinecone.io/
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=insurance_claims
DB_USER=insurance_admin
DB_PASSWORD=dev_password_123

# Service URLs
CLAIMS_SERVICE_URL=http://localhost:8001
DOCUMENT_SERVICE_URL=http://localhost:8002
OCR_SERVICE_URL=http://localhost:8003
PROCESSING_SERVICE_URL=http://localhost:8004
AI_PROCESSING_SERVICE_URL=http://localhost:8005
